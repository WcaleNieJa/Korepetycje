#include <bits/stdc++.h>
using namespace std;

struct para{
    int miasto;
    int odl;
    };
int Przyjscie[500001];
int Odleglosc[500001];
vector <para> T[500001];
priority_queue <int> F;

void wierzcholek(int h){
    Przyjscie[h]=0;
    for (int i=0; i < T[h].size();i++){
        if(T[h].miasto == -1){//jeszcze go nie odwiedzilismy
            if(Odleglosc[T[h][i].miasto]==-1){
                Odleglosc[T[h][i].miasto]=Odleglosc[h]+T[h][i].odl;
            }
            else{
                Odleglosc[T[h][i].miasto]=min(Odleglosc[T[h][i].miasto],Odleglosc[h]+T[h][i].odl);
            }
        }
    }
    Odleglosc[h]=0;
}


int main(){
    int n,m;
    cin >> n >> m;
    for (int i=0; i < m;i++){
        int temp1,temp2,temp3;
        cin >> temp1 >> temp2 >> temp3;
        para temp4;
        temp4.odl = temp3;
        temp4.miasto = temp2;
        T[temp1].push_back(temp4);
        temp4.miasto = temp1;
        T[temp2].push_back(temp4);
    }
    for (int i=2; i <= n;i++){
        Przyjscie[i]=-1;
        Odleglosc[i]=-1;
    }
    Odleglosc[1]=0;





    }
